<%-include('../cabecalho.ejs')%>

    <h1>Editar Time</h1>
    <form method="post">
      <input type="hidden" id="id" name="id" value="<%=Time.id%>"> <!-- ID do time -->
      <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="<%=Time.nome%>" required>
      </div>
      <div class="form-group">
        <label for="estadio">Est√°dio:</label>
        <input type="text" id="estadio" name="estadio" value="<%=Time.estadio%>" required>
      </div>
      <div class="form-group">
        <label for="time">Time:</label>
        <select  name="time" id="time" class="form-control">
          <option value="">selecione</option>
          <%Times.forEach(function(time){%>
              <option value="<%=time.id%>"><%=time.nome%></option>
          <%}%>
        </select>
      </div>
      <button type="submit" class="btn"><i class="fas fa-save"></i>&nbsp;Salvar</button>
      <a href="/admin/time/lst" class="btn cancelar">Cancelar</a>
    </form>

